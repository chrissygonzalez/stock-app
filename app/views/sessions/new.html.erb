<div class="grid-container">
    <div class="floating-form">
        <h2>Sign in to your account</h2>

        <%= form_for(:user, url: signin_path) do |f| %>
        <%=     label_tag "Name", nil, class: "label" %>
        <%=     text_field_tag "user_name", nil, class: "light-blue" %><br>

        <%=     label_tag "Password", nil, class: "label" %>
        <%=     password_field_tag 'password', nil, class: "light-blue" %>
        <%=     f.label :password_confirmation, class: "label" %>
        <%=     f.password_field :password_confirmation, class: "light-blue" %>
        <br>
        <%=     f.submit 'Sign In' %>
        <% end %>
    </div>
</div>