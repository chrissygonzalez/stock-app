<h1><%= @user.name %>'s Portfolio</h1>
<h3>Balance: <%= "%.2f" % @user.balance.truncate(2) %></h3>

<% if @stocks.size > 0 %>
<p>So many stocks</p>
<% else %>
<p>No stocks yet</p>
<% end %>

<h2>Buy a Stock</h2>
 <%= form_for @transaction, :url => user_transactions_path(@user.id) do |f| %>
    <%=     f.fields_for :stock do |st| %>
    <%=         st.label "Ticker", class: "label" %>
    <%=         st.text_field :symbol, class: "width-60" %><br>
    <% end %>
    <%=     f.label "Quantity", class: "label" %>
    <%=     f.text_field :quantity, class: "width-60" %><br>
    <%=     f.hidden_field :user_id, { :value => @user.id } %>
    <%=     f.submit "Buy" %>
<% end %>
